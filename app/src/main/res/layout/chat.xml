<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tegzzz2" />

        <TextView
            android:id="@+id/txtview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/img3"
            android:drawableLeft="@drawable/red_lens"
            android:drawablePadding="5dp"
            android:text="Stephanie Harris"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtview4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtview3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img3"
            android:background="@drawable/blue_curved_rectangle"
            android:text="Online"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtview4"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img3"
            android:drawableLeft="@drawable/ic_location_on_lilac_20dp"
            android:drawablePadding="5dp"
            android:text="@string/location"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/img3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="45dp"
        android:background="@color/borders" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:layout_toLeftOf="@id/pic"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:background="@drawable/pink_curved_rectangle"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/kelly2"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/chat1"
            style="@style/chat"
            android:text="Hello Kelly, How Are You?"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_below="@id/pic"
            android:layout_toRightOf="@id/pic2"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:background="@drawable/grey_curved_rectangle"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/pic"
            android:src="@drawable/tegzzz2"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/chat3"
            style="@style/chat"
            android:text="I'm really depressed"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/chat1"
            android:layout_toLeftOf="@id/pic3"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:background="@drawable/pink_curved_rectangle"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic3"
            android:layout_width="30dp"
            android:layout_below="@id/chat1"
            android:layout_marginTop="20dp"
            android:layout_height="30dp"
            android:src="@drawable/kelly2"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/chat2"
            style="@style/chat"
            android:text="Getting depressed can be exhausting"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_below="@id/pic3"
            android:layout_toRightOf="@id/pic4"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:background="@drawable/grey_curved_rectangle"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/pic3"
            android:src="@drawable/tegzzz2"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/chat5"
            style="@style/chat"
            android:text="A lot has been going on lately and I have cried so many times"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/chat2"
            android:layout_toLeftOf="@id/pic3"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:background="@drawable/pink_curved_rectangle"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic5"
            android:layout_width="30dp"
            android:layout_below="@id/chat2"
            android:layout_marginTop="20dp"
            android:layout_height="30dp"
            android:src="@drawable/kelly2"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_horiz_black_20dp"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="#BDBDBD">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_add_circle_black_24dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_photo_camera_black_35dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_insert_photo_black_35dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_keyboard_voice_black_34dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/edittext" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_mood_black_34dp"/>
    </LinearLayout>




</LinearLayout>