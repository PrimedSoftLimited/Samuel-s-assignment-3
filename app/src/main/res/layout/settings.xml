<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/half_curved_edges2"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/text3"
            style="@style/settings"
            android:text="Settings"
            android:layout_centerHorizontal="true"
            />

        <View
            android:id="@+id/line4"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/text3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/borders"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/txtview"
                style="@style/settings"
                android:text="availability"
                android:drawableLeft="@drawable/ic_account_circle_blue_16dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:text="Online"
                android:layout_marginLeft="130dp"
                android:drawableLeft="@drawable/ic_radio_button_checked_green_24dp"
                android:drawablePadding="5dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:text="Away"
                android:layout_marginLeft="200dp"
                android:drawableLeft="@drawable/ic_radio_button_checked_yellow_16dp"
                android:drawablePadding="5dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:text="Offline"
                android:layout_marginLeft="270dp"
                android:drawableLeft="@drawable/ic_radio_button_checked_red_24dp"
                android:drawablePadding="5dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtview1"
            style="@style/settings"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:text="frequently asked questions"
            android:drawableLeft="@drawable/ic_star_green_16dp"
            android:drawablePadding="7dp" />

        <TextView
            android:id="@+id/txtview2"
            style="@style/settings"
            android:layout_below="@id/txtview1"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:text="report a problem"
            android:drawableLeft="@drawable/ic_report_problem_orange_20dp"
            android:drawablePadding="7dp" />

        <TextView
            style="@style/settings"
            android:layout_marginTop="2dp"
            android:layout_below="@id/txtview2"
            android:layout_marginLeft="20dp"
            android:text="logout"
            android:drawableLeft="@drawable/ic_error_red_20dp"
            android:drawablePadding="7dp" />

    </RelativeLayout>

</RelativeLayout>